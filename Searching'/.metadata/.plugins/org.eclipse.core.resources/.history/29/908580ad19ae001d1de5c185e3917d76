import java.util.Scanner;

public class LinearSearch {
	
	public static void searchLineraly(int arr[], int X, int L) {
		for(int i=0; i<L; i++) {
			if(arr[i]==X) {
				System.out.println("Item Found.");
				break;
			}
		}
		
	}

	public static void main(String[] args) {
		int[] arr1 = {10,20,30,40,50,60,70};
		for(int i=0; i<arr1.length; i++) {
			System.out.print(" "+arr1[i]);
			System.out.print();
		}
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter number to check in given array: ");
		int x = sc.nextInt();
		int l = arr1.length;
		System.out.println("Search X in Array:");
		searchLineraly(arr1, x, l);
		

	}

}
